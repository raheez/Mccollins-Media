<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_margin="10dp"
        android:elevation="4dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <View
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/colorPrimary"/>

            <View
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:id="@+id/contactno"
                android:layout_alignParentRight="true"
                android:layout_alignTop="@id/titletv"
                android:layout_marginRight="10dp"
                android:background="@color/greycolor"/>

            <View
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:id="@+id/distanceTv"
                android:background="@color/greycolor"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@id/descTv"
                android:layout_below="@id/contactno"/>



            <View
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:id="@+id/imageicon"
                android:background="@color/greycolor"
                />

            <View
                android:layout_width="50dp"
                android:layout_height="10dp"
                android:id="@+id/titletv"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/imageicon"
                android:layout_toLeftOf="@id/contactno"
                android:background="@color/greycolor"
                android:layout_alignTop="@+id/imageicon"
                />



            <View
                android:id="@+id/descTv"
                android:layout_alignLeft="@id/titletv"
                android:layout_width="50dp"
                android:layout_toLeftOf="@id/distanceTv"
                android:layout_height="10dp"
                android:layout_marginRight="40dp"
                android:layout_below="@id/titletv"
                android:background="@color/greycolor"
                 />
        </RelativeLayout>
    </android.support.v7.widget.CardView>



</RelativeLayout>
